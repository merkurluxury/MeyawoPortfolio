@model List<MeyawoPortfolio.Models.TblReferences>
@{ ViewBag.Title = "Index";
                Layout = "~/Views/AdminLayout/_Layout.cshtml"; }



<h2>Referanslar Sayfası</h2>

<style>
    .table {
        border-collapse: separate;
        border-spacing: 0 15px;
        width: 100%;
    }

        .table th, .table td {
            border: 1px solid #ddd;
            padding: 8px 15px;
            text-align: center;
        }

        .table tr:nth-child(even) {
            background-color: #f2f2f2;
        }

    .btn {
        border-radius: 5px;
        box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.2);
        transition: all 0.3s ease;
        padding: 10px 20px;
        text-decoration: none; /* Linkler için alt çizgiyi kaldır */
        color: white; /* Metin rengi */
    }

    .btn-danger {
        background-color: #dc3545;
    }

    .btn-success {
        background-color: #28a745;
    }

    .btn-primary {
        background-color: #007bff;
    }

    .btn:hover {
        transform: scale(1.05);
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.3);
    }
</style>

<table class="table table-bordered">
    <tr>
        <th>Referans ID</th>
        <th>Referans İsmi</th>
        <th>Referans Resmi</th>
        <th>Referans Açıklaması</th>
        <th>Referans Durumu</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.TestimonialId</td>
            <td>@item.NameSurname</td>
            <td>@item.ImageUrl</td>
            <td>@item.Description</td>
            <td>@item.Status</td>
            <td><a href="/References/DeleteReference/@item.TestimonialId" class="btn btn-danger">Sil</a></td>
            <td><a href="/References/UpdateReference/@item.TestimonialId" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>

<a href="/References/CreateReference/" class="btn btn-primary">Yeni Referans Girişi</a>
